<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <artifactId>asset-tag-monitor</artifactId>
  <packaging>pom</packaging>
  <name>asset-tag-monitor</name>
  <description>
      Nagios Plugin that monitors the hosts in an environment and validates the asset tags
  </description>
  
    <parent>
		<groupId>com.intel.mtwilson.services</groupId>
		<artifactId>mtwilson-services</artifactId>
		<version>2.0-SNAPSHOT</version>
    </parent>

    <build>
	

		<plugins>
            
    <plugin>
	<groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
	    <id>default-cli</id>
            <phase>package</phase>
	    <goals>
		<goal>run</goal>
	    </goals>
            <configuration>
		<target>
	    		<zip destfile="${project.build.directory}/${project.artifactId}-${project.version}.zip">
				<fileset dir="${basedir}/src/main/resources" prefix="${project.artifactId}-${project.version}"/>
			</zip>
		</target>
            </configuration>
          </execution>
        </executions>
            <dependencies>
		<dependency>
		    <groupId>org.apache.ant</groupId>
		    <artifactId>ant</artifactId>
		    <version>1.8.4</version>
		</dependency>
                <dependency>
                    <groupId>ant-contrib</groupId>
                    <artifactId>ant-contrib</artifactId>
                    <version>1.0b3</version>
                </dependency>
            </dependencies>
      </plugin>	    
      

        <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>build-helper-maven-plugin</artifactId>
            <executions>                      
                <execution>
                    <id>attach-artifacts</id>
                    <phase>package</phase>
                    <goals>
                        <goal>attach-artifact</goal>
                    </goals>
                    <configuration>
                        <artifacts>
                            <artifact>
                                <file>${project.build.directory}/${project.artifactId}-${project.version}.zip</file>
                                <type>zip</type>
                            </artifact>
                        </artifacts>
                    </configuration>
                </execution>
            </executions>
        </plugin>


    </plugins>      
      

    </build>

</project>
